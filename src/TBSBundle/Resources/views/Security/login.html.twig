{% extends "FOSUserBundle::layout.html.twig" %}

{% block subzone %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<br>
<div class="row">
	<div class="col-lg-4 col-lg-offset-4">
	<h1>Connexion</h1>
		<form action="{{ path("fos_user_security_check") }}" method="post">
			<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			<div class="row">
				<div class="col-lg-6">
					<label for="username">{{ 'Identifiant'|trans }}</label>
				</div>
				<div class="col-lg-6">
					<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-lg-6">
					<label for="password">{{ 'MdP'|trans }}</label>
				</div>
				<div class="col-lg-6">
					<input type="password" id="password" name="_password" required="required" />
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-lg-12">
					<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
					<label for="remember_me">{{ 'Se souvenir'|trans }}</label>
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-lg-6 col-lg-offset-3">
					<input type="submit" id="_submit" name="_submit" value="{{ 'Connexion'|trans }}" />
				</div>
			</div>
		</form>
	</div>
</div>
	<div class="row">
		<div class="col-lg-4 col-lg-offset-4">
			<a href="{{ path('fos_user_registration_register') }}"><h1 class="register">S'inscrire</h1></a>
		</div>
	</div>
</div>

{% endblock fos_user_content %}

{% endblock %}