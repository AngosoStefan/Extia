{% extends "TBSBundle::layout.html.twig" %}


{% block subzone %}

<script type="text/javascript" src="http://cdn.robotwebtools.org/EventEmitter2/current/eventemitter2.min.js"></script>
<script type="text/javascript" src="http://cdn.robotwebtools.org/roslibjs/current/roslib.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="{{ asset('js/javascript.js')}}"></script>

	{% if (app.user == 'ca') %}
		<h1>Stocks à recharger</h1>
		{% for stock in stocks %}
				Produit : {{stock.sName}} <a href="{{ path('tbs_edit_stock', {id:stock.sId}) }}"><span class="glyphicon glyphicon-pencil useraction"></span></a>

		{% endfor %}
		<h1>Les commandes</h1>
		


		
			{% for basket in baskets %}
		
				Numéro de commmande: {{basket.bId}} <a id="validate_drink" href="{{ path('tbs_indexca', {id:basket.bId}) }}"><span class="useraction">Valider</span></a><br>

				<br>


				{% for order in orders %}
					{% if order.bId.__toString() == basket.bId %}
						Boisson: {{order.pId}}<br>
						Quantité: {{order.olQtt}}<br>
					{% endif %}
				{% endfor %}
			
			{% endfor %}

		






	{% endif %}

{% endblock %}