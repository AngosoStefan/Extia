{% extends "TBSBundle::layout.html.twig" %}

{% block subzone %}

		<h1>Tous les utilisateurs</h1>
		
		<table class="widetable">
			<tr>
				<th>Utilisateur</th>
				<th>Action</th>
			</tr>

		{# Liste des utilisateurs #}
		{% for user in users %}
			{% if user.username != 'admin' %}
			<tr>
				<td>{{user.username}}</td>
				{# Supression d'un utilisateur #}
				<td><a href="{{ path("tbs_delete_user", { id: user.id}) }}"><span class="glyphicon glyphicon-trash useraction"></span></a></td>
			</tr>
			{% endif %}
		{% endfor %}
		</table>

{% endblock %}