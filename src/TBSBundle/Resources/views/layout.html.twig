{% extends "::base.html.twig" %}

{% block menu %}

<!-- Menu de gauche -->

<div class="col-lg-2">
	
	<div class="row">

		{% if app.user == 'admin' %}

		<a href="{{ path('tbs_delete_list_user') }}"><span class="glyphicon glyphicon-search leftoption"></span></a>

		{% elseif app.user == 'ca' %}

			<div class="leftoptionca">
				<a href="{{ path('tbs_index') }}"><span class="glyphicon glyphicon-list-alt"></span></a>
			</div>

			<div class="leftoptionca">
				<a href="{{ path('tbs_stocks') }}"><span class="glyphicon glyphicon glyphicon-qrcode"></span></a>
				<a href="{{ path('tbs_add_stock') }}"><span class="glyphicon glyphicon glyphicon-plus-sign"></span></a>
			</div>

			<div class="leftoptionca">
				<a href="{{ path('tbs_products') }}"><span class="glyphicon glyphicon-glass"></span></a>
				<a href="{{ path('tbs_add_product') }}"><span class="glyphicon glyphicon glyphicon-plus-sign"></span></a>
			</div>

		{% elseif app.user != null %}
		
		<a href="{{ path('tbs_index') }}"><span class="glyphicon glyphicon-home leftoption"></span></a>
		<a href="{{ path('tbs_add_basket',{ id: app.user.id}) }}"><span class="glyphicon glyphicon-shopping-cart leftoption"></span></a>

		{% endif %}
	</div>
</div>

{% endblock menu %}

